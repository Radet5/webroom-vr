
{
	"env": {
	    "browser": true,
	    "es2021": true,
	    "node": true
	},
	"extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
			"prettier"
	],
	"parserOptions": {
	    "ecmaVersion": 12,
	    "sourceType": "module"
	},
	"rules": {
	    "no-mixed-spaces-and-tabs": "off",
			"arrow-body-style":"off",
    	"noExplicitAny": "off",
			"prettier/prettier": "warn"
	},
	"ignorePatterns": [
	    "docs", "parcel-build", "dist"
	],
  "parser": "@typescript-eslint/parser",
	"plugins": [
	    "@typescript-eslint",
			"prettier"
	]
}